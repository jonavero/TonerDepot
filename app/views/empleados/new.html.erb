<header>
  <div class="perfil">
    <p class="parrafo"><strong>Bienvenido :  </strong><%=current_user.userCompleto%></p>
    <span> <%=link_to 'Cerrar sesion',  logout_path, method: :delete,class: 'link' %></span>

  </div>
</header>

<div class="container">
  <div class="registro">

    <h1 class="to">Registro de Nuevo Empleado</h1>

    <%= form_for  @empleado, url: new_empleado_path(@empleado) do |f| %>
      <% if @empleado.errors.any? %>
        <div id="errorExplanation">
          <ul>
            <% @empleado.errors.full_messages.each do |msg| %>
              <li  class="alert alert-danger" role="alert" ><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="control-group error">
        <div class="controls ">
          <%= f.text_field :CodigoEmpleado, :placeholder => 'Codigo Empleado',:class=>"form-control inputt"%>
        </div>
        <div class="controls">
          <%= f.text_field :Nombre , :placeholder => 'Nombre',:class=>"form-control inputt"%>
        </div>
        <div class="controls">
          <%= f.text_field :Apellido, :placeholder => 'Apellido',:class=>"form-control inputt"%>
        </div>
        <div>
          <%= f.text_field :Departamento, :placeholder => 'Departamento',:class=>"form-control inputt" %>

        </div>
        <div>
          <%= f.text_field :Puesto, :placeholder => 'Puesto',:class=>"form-control inputt" %>

        </div>
      </div>
      <div class="actions"><%= f.submit 'Enviar', :class=>'btn btn-success btn2' %></div>
    <% end %>
  </div>
</div>

