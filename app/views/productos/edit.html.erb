<header class="header-nav">
  <div class="perfil">
    <p class="parrafo"><strong>Bienvenido :  </strong><%=current_user.userCompleto%></p>
    <span class="perfil--close"> <%=link_to 'Cerrar sesion',  logout_path, method: :delete,class: 'link' %></span>
  </div>
</header>


<div class="container container--newEmpl">
  <div class="mt-5 registro">

    <h1 class="title-h1">Actualizar Producto</h1>

    <%= form_for  @producto, url: updateProducto_path(@producto) do |f| %>
      <% if @producto.errors.any? %>
        <div id="errorExplanation">
          <ul>
            <% @producto.errors.full_messages.each do |msg| %>
              <li  class="alert alert-danger" role="alert" ><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="control-group error formNewEmpl mt-4">
        <div class="controls ">
          <%= f.text_field :Serial, :placeholder => 'Serial',:class=>"form-control inputt",disabled: true%>
          <%= f.text_field :Descripcion , :placeholder => 'Descripcion',:class=>"form-control inputt"%>
        </div>
        <div class="controls">
          <%= f.text_field :Marca, :placeholder => 'Marca',:class=>"form-control inputt"%>
        </div>
        <div>
          <%= f.text_field :Modelo, :placeholder => 'Modelo',:class=>"form-control inputt" %>

        </div>
        <div>
          <%= f.text_field :Area, :placeholder => 'Area',:class=>"form-control inputt" %>

        </div>
        <div class="actions"><%= f.submit 'Enviar', :class=>'btn btn-success btn2' %></div>
      </div>
    <% end %>
  </div>
</div>

