<header class="header-nav">
  <div class="perfil">
    <p class="parrafo"><strong>Bienvenido :  </strong><%=current_user.userCompleto%></p>
    <span class="perfil--close"> <%=link_to 'Cerrar sesion',  logout_path, method: :delete,class: 'link' %></span>
  </div>
</header>


<div class="container--box">
  <header class="header-title">
    <h1>Productos</h1>
  </header>
<% if @productos.empty? %>
  <h2>No hay produtos registrado aun....<%= link_to 'Nuevo Producto',newProducto_path, class: "btn btn-primary" %> </h2>



<%else %>
  <div class="container--tableEmpl">
    <div>
      <%= link_to 'Nuevo Producto',newProducto_path, class: "btn btn-primary" %>
    </div>
    <table class="ui very basic collapsing celled table table--empl">
      <thead>
      <tr>
        <th>Serial</th>
        <th>Productos</th>
        <th>Model</th>
        <th>Area</th>
        <th>Accion</th>
      </tr></thead>
      <tbody>
      <%@productos.each do |e| %>
        <tr>
          <td><%=e.Serial %></td>
          <td><%=e.Descripcion %> <%=e.Marca %></td>
          <td><%=e.Modelo %></td>
          <td><%=e.Area %></td>
          <td colspan="3">
            <%= link_to 'Editar',editProducto_path(e), class: "btn btn-warning" %>
            <%= link_to 'Eliminar', { action: :destroy, id: e.id }, method: :delete, class: "btn btn-danger",data: {confirm: "Esta seguro de eliminar este producto"} %>
          </td>
        </tr>
      <%end %>
      </tbody>
    </table>
  </div>
<%end %>
</div>
<%if flash[:notice]%>
  <div class="alert alert-info" style="float: right; margin-right: 500px">

    <p><%= flash[:notice]%></p>

  </div>
<%end %>

