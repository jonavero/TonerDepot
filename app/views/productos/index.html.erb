<header>
  <div class="perfil">
    <p class="parrafo"><strong>Bienvenido :  </strong><%=current_user.userCompleto%></p>
    <span> <%=link_to 'Cerrar sesion',  logout_path, method: :delete,class: 'link' %></span>

  </div>
</header>

<% if @productos.empty? %>
  <h2>No hay produtos registrado aun....<%= link_to 'Nuevo Producto',newProducto_path, class: "btn btn-primary" %> </h2>



<%else %>
  <div class="empleadotab">
    <table class="ui very basic collapsing celled table ">
      <thead>
      <tr>
        <th>Productos</th>
        <th>Serial</th>
        <th>Accion</th>
        <th colspan="3"><%= link_to 'Nuevo Producto',newProducto_path, class: "btn btn-primary" %></th>
      </tr></thead>
      <tbody>
      <%@productos.each do |e| %>
        <tr>
          <td>
            <h4 class="ui image header">

              <div class="content">
                <%=e.Descripcion %> <%=e.Marca %>
                <div class="sub header">
                  <span class="cursiva"> <%=e.Modelo %> </span>
                </div>

                <%=e.Area %>
              </div>
            </h4></td>
          <td>
            <%=e.Serial %>
          </td>
          <td colspan="3">

            <%= link_to 'Editar',editProducto_path(e), class: "btn btn-warning" %>
            <%= link_to 'Eliminar', { action: :destroy, id: e.id }, method: :delete, class: "btn btn-danger",data: {confirm: "Esta seguro de eliminar este producto"} %>
          </td>
        </tr>
      <%end %>
      </tbody>
    </table>
  </div>
<%end %>

<%if flash[:notice]%>
  <div class="alert alert-info" style="float: right; margin-right: 500px">

    <p><%= flash[:notice]%></p>

  </div>
<%end %>

<%if flash[:notice2]%>
  <div class="alert alert-success" style="float: right; margin-right: 500px">

    <p><%= flash[:notice2]%></p>

  </div>
<%end %>

<%if flash[:notice3]%>
  <div class="alert alert-success" style="float: right; margin-right: 500px">

    <p><%= flash[:notice3]%></p>

  </div>
<%end %>